<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.arafat.cardcollector.MainActivity">

    <EditText
        android:id="@+id/usernameField"
        android:layout_width="228dp"
        android:layout_height="32dp"
        android:layout_alignLeft="@+id/signUpButton"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/signUpButton"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="218dp"
        android:background="#000000"
        android:cursorVisible="true"
        android:hint="username"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark" />

    <EditText
        android:id="@+id/passwordField"
        android:layout_width="230dp"
        android:layout_height="32dp"
        android:layout_marginTop="37dp"
        android:background="#000000"
        android:ems="10"
        android:hint="password"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:layout_below="@+id/usernameField"
        android:layout_alignLeft="@+id/usernameField"
        android:layout_alignStart="@+id/usernameField" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:layout_marginTop="41dp"
        android:onClick="onClickLogin"
        android:text="Login"
        android:layout_below="@+id/passwordField"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/signUpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickSignUp"
        android:paddingRight="10dp"
        android:text="Sign-Up"
        android:layout_alignBaseline="@+id/loginButton"
        android:layout_alignBottom="@+id/loginButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp" />


</RelativeLayout>
